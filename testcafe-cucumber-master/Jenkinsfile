node {
    env.NODEJS_HOME = "${tool 'Node 12.x'}"
    // on linux / mac
    //env.PATH="${env.NODEJS_HOME}/bin:${env.PATH}"
    // on windows
    env.PATH="${env.NODEJS_HOME};${env.PATH}"
    sh 'npm --version'
}

pipeline {
  agent any
 
  //tools {nodejs "recent_node"}
 
  stages {
    stage('Build') {
        steps {
            nodejs(nodeJSInstallationName: 'Node 12.x', configId: '<config-file-provider-id>') {
                sh 'npm config ls'
            }
        }
    }    
    stage('Clonning Git') {
        steps {
            git 'https://github.com/ivan-molina/TFM_CUCUMBER.git'
        }
    }
    
    stage('Install dependencies') {
        steps {
            sh 'npm install'
        }
        
    }
    
  }
}